<div class="row">
  <div class="spacer"></div>
  <div class="col-md-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= month_calendar events: @events do |date, events| %>
        <%= date %>
        <% @events.each do |event| %>
          <div>
            <%= event.name %>
          </div>
        <% end %>
      <% end %>
      </div>
    </div>
  </div>
</div>
