<%= form_for(@event) do |f| %>
	<% if @event.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

			<ul>
				<% @event.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="row">
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-12">
					<div class="field">
						<%= f.label :name %><br>
						<%= f.text_field :name %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="field">
						<%= f.label :description %><br>
						<%= f.text_area :description %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-md-6">
			<div class="row">
				<div class="col-md-12">
					<div class="field">
						<%= f.label :address %><br>
						<%= f.text_field :address %>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="field">
						<%= f.label :zip %><br>
						<%= f.text_field :zip %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="field">
	<%= f.label :start_time %><br>
	<%= f.datetime_select :start_time %>
	</div>
	<div class="field">
	<%= f.label :end_time %><br>
	<%= f.datetime_select :end_time %>
	</div>
	<div class="actions">
	<%= f.submit :class => "btn btn-default btn-sm" %>
	</div>
<% end %>
