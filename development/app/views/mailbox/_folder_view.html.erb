<div class="row first">
  <div class="col-md-3 col-lg-2">
    <div class="panel panel-default">
      <div class="panel-body">
	      <%= link_to "New Message", new_conversation_path, class: "btn btn-default btn-md", "role" => "link"%>
        <%= render 'mailbox/folders' %>
      </div>
    </div>
  </div>

  <div class="col-md-9 col-lg-10">
    <div class="panel panel-default">
      <div class="panel-body">
	<% if is_conversation %>
		<%= render 'conversations/form' %>
	<% else %>
          
          <% if messages.length == 0 %>
            <h3 id="noMail">Nothing Here</h3>
          <% else %>
            <%= render partial: 'conversations/conversation', collection: messages %>
          <% end %>
	<% end %>
      </div>
    </div>
  </div>

</div>
